module bitshiftleft (
    input io_dip[3][8],
    output out[8]
  ) {
//hardcode works best here instead of doing a general gate logic. I mean if you want to, go ahead though it would work better...
  //i don't have brain juice left to figure out gate logic.
  always {
  out =00000000;
    //again just placed to prevent error during complile. Lower statements take priority.
    if(io_dip[1][2:0] == d0){
    out[7] = io_dip[0][7];
    out[6] = io_dip[0][6];
    out[5] = io_dip[0][5];
    out[4] = io_dip[0][4];
    out[3] = io_dip[0][3];
    out[2] = io_dip[0][2];
    out[1] = io_dip[0][1];
    out[0] = io_dip[0][0];      
    }
    if(io_dip[1][2:0] == d1){
    out[7] = 0;
    out[6] = io_dip[0][7];
    out[5] = io_dip[0][6];
    out[4] = io_dip[0][5];
    out[3] = io_dip[0][4];
    out[2] = io_dip[0][3];
    out[1] = io_dip[0][2];
    out[0] = io_dip[0][1];
      }
    if(io_dip[1][2:0] == d2){
    out[7] = 0;
    out[6] = 0;
    out[5] = io_dip[0][7];
    out[4] = io_dip[0][6];
    out[3] = io_dip[0][5];
    out[2] = io_dip[0][4];
    out[1] = io_dip[0][3];
    out[0] = io_dip[0][2];
      }
    if(io_dip[1][2:0] == d3){
    out[7] = 0;
    out[6] = 0;
    out[5] = 0;
    out[4] = io_dip[0][7];
    out[3] = io_dip[0][6];
    out[2] = io_dip[0][5];
    out[1] = io_dip[0][4];
    out[0] = io_dip[0][3];
      }
    if(io_dip[1][2:0] == d4){
    out[7] = 0;
    out[6] = 0;
    out[5] = 0;
    out[4] = 0;
    out[3] = io_dip[0][7];
    out[2] = io_dip[0][6];
    out[1] = io_dip[0][5];
    out[0] = io_dip[0][4];
      }
    if(io_dip[1][2:0] == d5){
    out[7] = 0;
    out[6] = 0;
    out[5] = 0;
    out[4] = 0;
    out[3] = 0;
    out[2] = io_dip[0][7];
    out[1] = io_dip[0][6];
    out[0] = io_dip[0][5];
      }
    if(io_dip[1][2:0] == d6){
    out[7] = 0;
    out[6] = 0;
    out[5] = 0;
    out[4] = 0;
    out[3] = 0;
    out[2] = 0;
    out[1] = io_dip[0][7];
    out[0] = io_dip[0][6];
      }
    if(io_dip[1][2:0] == d7){
    out[7] = 0;
    out[6] = 0;
    out[5] = 0;
    out[4] = 0;
    out[3] = 0;
    out[2] = 0;
    out[1] = 0;
    out[0] = io_dip[0][7];
      }
  }
}
